# Environment configuration for IOTA wallet application

# Server port
PORT=3000

# Stronghold password (should be a strong password in production)
STRONGHOLD_PASSWORD=your_secure_password

# Encryption key for sensitive data (change in production)
ENCRYPTION_KEY=default-encryption-key

# Node URLs (comma-separated)
NODE_URLS=https://api.testnet.iotaledger.net

# Faucet API URL
FAUCET_API=https://faucet.testnet.iotaledger.net/api/enqueue

# Network ID (testnet, devnet, mainnet)
NETWORK=testnet

# Coin type (4219 for Shimmer, 4218 for IOTA)
COIN_TYPE=4218

# File storage paths
WALLET_DB_PATH=./wallet_database
STRONGHOLD_PATH=./wallet_stronghold
DATA_PATH=./data